<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryDark">@color/color_Primary_Dark</item>
        <item name="colorAccent">@color/color_Accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16dp</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32dp</item>
    </style>

    <!--phnoe vk gh aboutme-->
    <style name="InformationListElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8dp</item>
    </style>

    <style name="InformationListContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/spacing_larger_72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="InformationListEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="profileItem_lineSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_Light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72dp</item>
    </style>
    <!-- topviews -->
    <style name="scoreBox_sectionLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="scoreBox_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small_16sp</item>
    </style>

    <style name="scoreBox_text.count" parent="scoreBox_text">
        <item name="android:textSize">@dimen/font_medium_24sp</item>
    </style>

    <style name="scoreBox_lineSeparator">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_Light</item>
    </style>

    <style name="profileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8dp</item>
    </style>
</resources>